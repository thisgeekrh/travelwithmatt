---
const logos = [
  { name: "Royal Caribbean", src: "/images/royal-caribbean-logo.png", alt: "Royal Caribbean International" },
  { name: "Norwegian Cruise Line", src: "/images/norwegian-logo.png", alt: "Norwegian Cruise Line" },
  { name: "Carnival Cruise Line", src: "/images/carnival-logo.png", alt: "Carnival Cruise Line" },
  { name: "Celebrity Cruises", src: "/images/celebrity-logo.png", alt: "Celebrity Cruises" },
  { name: "Disney Cruise Line", src: "/images/disney-logo.png", alt: "Disney Cruise Line" },
  { name: "Princess Cruises", src: "/images/princess-logo.png", alt: "Princess Cruises" },
];

const trustBadges = [
  { name: "ARC Verified", icon: "shield-check", description: "ARC Verified Travel Agency" },
  { name: "Cruise Brothers", icon: "building", description: "Independent Contractor" },
  { name: "Secure Booking", icon: "lock-closed", description: "Secure Online Booking" },
];
---

<section class="py-16 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Cruise Line Logos -->
    <div class="mb-12">
      <h2 class="text-center text-lg font-semibold text-gray-600 mb-8">
        Trusted by Leading Cruise Lines
      </h2>
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-8 items-center justify-items-center">
        {logos.map((logo) => (
          <div class="flex items-center justify-center h-16 w-full">
            <div class="bg-white rounded-lg p-4 shadow-sm border border-gray-200 w-full h-full flex items-center justify-center">
              <div class="text-gray-400 text-sm font-medium text-center">
                {logo.name}
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Trust Badges -->
    <div class="border-t border-gray-200 pt-12">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {trustBadges.map((badge) => (
          <div class="text-center">
            <div class="flex justify-center mb-4">
              <div class="w-12 h-12 bg-ocean-100 rounded-full flex items-center justify-center">
                {badge.icon === "shield-check" && (
                  <svg class="w-6 h-6 text-ocean-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                  </svg>
                )}
                {badge.icon === "building" && (
                  <svg class="w-6 h-6 text-ocean-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                  </svg>
                )}
                {badge.icon === "lock-closed" && (
                  <svg class="w-6 h-6 text-ocean-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                  </svg>
                )}
              </div>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">{badge.name}</h3>
            <p class="text-sm text-gray-600">{badge.description}</p>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
