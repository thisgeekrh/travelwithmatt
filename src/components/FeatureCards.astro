---
const features = [
  {
    title: "Insider Value",
    description: "Unlock promos and perks that are easy to miss online.",
    icon: "gift",
    color: "ocean"
  },
  {
    title: "Time Saved",
    description: "Skip the research maze. Get clear choices fast.",
    icon: "clock",
    color: "accent"
  },
  {
    title: "Support You Can Text",
    description: "Questions pop up. I reply with simple answers.",
    icon: "chat-bubble-left-right",
    color: "ocean"
  }
];

const getIcon = (iconName: string) => {
  const icons = {
    gift: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7" />
    </svg>`,
    clock: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
    </svg>`,
    "chat-bubble-left-right": `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
    </svg>`
  };
  return icons[iconName as keyof typeof icons] || icons.gift;
};

const getColorClasses = (color: string) => {
  const colors = {
    ocean: "bg-ocean-50 text-ocean-600",
    accent: "bg-accent-50 text-accent-600"
  };
  return colors[color as keyof typeof colors] || colors.ocean;
};
---

<section class="py-20 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
        Why Book With Matt?
      </h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        Same prices you find online in most cases, with a human on your side.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {features.map((feature, index) => (
        <div 
          class="group relative bg-white rounded-2xl p-8 shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2 border border-gray-100"
          style={`animation-delay: ${index * 0.1}s`}
        >
          <div class="flex items-center justify-center w-16 h-16 rounded-xl mb-6 mx-auto {getColorClasses(feature.color)}">
            <Fragment set:html={getIcon(feature.icon)} />
          </div>
          
          <h3 class="text-xl font-semibold text-gray-900 mb-4 text-center">
            {feature.title}
          </h3>
          
          <p class="text-gray-600 text-center leading-relaxed">
            {feature.description}
          </p>

          <!-- Hover effect -->
          <div class="absolute inset-0 rounded-2xl bg-gradient-to-br from-ocean-500/5 to-accent-500/5 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
        </div>
      ))}
    </div>

    <!-- Additional value proposition -->
    <div class="mt-16 text-center">
      <div class="bg-gradient-to-r from-ocean-50 to-accent-50 rounded-2xl p-8 border border-ocean-100">
        <h3 class="text-2xl font-semibold text-gray-900 mb-4">
          Cruise smarter, relax sooner.
        </h3>
        <p class="text-lg text-gray-600 mb-6 max-w-2xl mx-auto">
          Clear communication, simple choices, and real support. You still get the prices you expect, plus support from me before and after you sail.
        </p>
        <a
          href="https://bookings.cbagenttools.com/swift/cruise?advancedsearch=true&siid=1021147&lang=1"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-lg text-white bg-ocean-600 hover:bg-ocean-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-ocean-500 transition-colors duration-200"
        >
          Start Planning Your Cruise
          <svg class="ml-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>
