---

<section class="py-16 bg-white">
  <div class="container mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-4">
        Current Cruise Deals
      </h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        Limited-time offers on amazing cruise destinations. Book now to secure the best prices!
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {deals.map((deal) => (
        <div class="bg-white rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 overflow-hidden group">
          <!-- Image -->
          <div class="relative h-48 overflow-hidden">
            <img 
              src={deal.image} 
              alt={deal.title}
              class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
              loading="lazy"
            />
            <div class="absolute top-4 left-4">
              <span class={`px-3 py-1 rounded-full text-sm font-semibold ${
                deal.badge === 'Popular' ? 'bg-red-500 text-white' :
                deal.badge === 'Limited' ? 'bg-orange-500 text-white' :
                'bg-green-500 text-white'
              }`}>
                {deal.badge}
              </span>
            </div>
            <div class="absolute top-4 right-4 bg-black/50 text-white px-2 py-1 rounded text-sm">
              Save {deal.savings}
            </div>
          </div>

          <!-- Content -->
          <div class="p-6">
            <h3 class="text-xl font-bold text-gray-900 mb-2">
              {deal.title}
            </h3>
            <p class="text-gray-600 mb-4 text-sm">
              {deal.description}
            </p>

            <!-- Cruise Details -->
            <div class="grid grid-cols-2 gap-4 mb-4 text-sm">
              <div>
                <span class="text-gray-500">Departure:</span>
                <p class="font-medium">{deal.departure}</p>
              </div>
              <div>
                <span class="text-gray-500">Duration:</span>
                <p class="font-medium">{deal.duration}</p>
              </div>
              <div>
                <span class="text-gray-500">Cruise Line:</span>
                <p class="font-medium">{deal.cruiseLine}</p>
              </div>
              <div>
                <span class="text-gray-500">Per Person:</span>
                <p class="font-medium">From {deal.price}</p>
              </div>
            </div>

            <!-- Pricing -->
            <div class="flex items-center justify-between mb-4">
              <div>
                <span class="text-2xl font-bold text-accent-600">{deal.price}</span>
                <span class="text-gray-400 line-through ml-2">{deal.originalPrice}</span>
              </div>
              <div class="text-green-600 font-semibold">
                Save {deal.savings}
              </div>
            </div>

            <!-- CTA Button -->
            <a 
              href="https://bookings.cbagenttools.com/swift/cruise?advancedsearch=true&siid=1021147&lang=1"
              class="w-full bg-accent-500 hover:bg-accent-600 text-white font-semibold py-3 px-4 rounded-lg transition-colors duration-300 text-center block"
            >
              View Sailings
            </a>
          </div>
        </div>
      ))}
    </div>

    <div class="text-center mt-12">
      <p class="text-gray-600 mb-6">
        <strong>Note:</strong> Prices and availability are subject to change. Contact Matt for the most current rates and availability.
      </p>
      <a 
        href="https://bookings.cbagenttools.com/swift/cruise?advancedsearch=true&siid=1021147&lang=1"
        class="inline-flex items-center bg-primary-600 hover:bg-primary-700 text-white font-semibold py-4 px-8 rounded-full transition-colors duration-300"
      >
        View All Deals
        <svg class="ml-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
        </svg>
      </a>
    </div>
  </div>
</section>
