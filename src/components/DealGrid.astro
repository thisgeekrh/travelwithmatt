              <span class={`px-3 py-1 rounded-full text-xs font-semibold ${getBadgeColor(deal.badgeColor)}`}>
                {deal.badge}
              </span>
            </div>
          </div>

          <!-- Content -->
          <div class="p-6">
            <div class="flex items-start justify-between mb-3">
              <h3 class="text-xl font-bold text-gray-900 group-hover:text-ocean-600 transition-colors duration-200">
                {deal.title}
              </h3>
            </div>

            <p class="text-gray-600 mb-4 line-clamp-2">
              {deal.description}
            </p>

            <!-- Cruise Details -->
            <div class="grid grid-cols-2 gap-4 mb-4 text-sm text-gray-500">
              <div>
                <span class="font-medium">Departure:</span> {deal.departure}
              </div>
              <div>
                <span class="font-medium">Duration:</span> {deal.duration}
              </div>
              <div>
                <span class="font-medium">Cruise Line:</span> {deal.line}
              </div>
            </div>

            <!-- Pricing -->
            <div class="flex items-center justify-between mb-6">
              <div>
                <div class="text-2xl font-bold text-gray-900">{deal.price}</div>
                <div class="text-sm text-gray-500 line-through">{deal.originalPrice}</div>
              </div>
              <div class="text-sm font-semibold text-accent-600 bg-accent-50 px-3 py-1 rounded-full">
                {deal.savings}
              </div>
            </div>

            <!-- CTA Button -->
            <a
              href={deal.link}
              target="_blank"
              rel="noopener noreferrer"
              class="block w-full text-center px-6 py-3 bg-ocean-600 hover:bg-ocean-700 text-white font-semibold rounded-lg transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-ocean-500"
